{
  "manifest_version": 3,
  "name": "Good-or-Mood",
  "version": "1.5.0",
  "description": "每日情绪追踪和记录",
  "permissions": ["storage", "notifications"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ]
}
